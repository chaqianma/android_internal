<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/android_layout_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <ImageView
            android:id="@+id/img_company_add_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/icon_add" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_company_add_1"
            android:text="添加企业"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size" />
    </RelativeLayout>

    <View style="@style/ViewLineStyle" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_company_1" />

            <ViewStub
                android:id="@+id/stub_company_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inflatedId="@+id/company_2"
                android:layout="@layout/layout_company_2" />

            <ViewStub
                android:id="@+id/stub_company_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inflatedId="@+id/company_3"
                android:layout="@layout/layout_company_3" />

            <!-- <include layout="@layout/layout_company_2" />

             <include layout="@layout/layout_company_3" />-->

            <View style="@style/ViewLineStyle" />

            <LinearLayout
                style="@style/LinearLayoutStyle"
                android:orientation="vertical">

                <TextView
                    style="@style/SmallTextStyle"
                    android:text="备注" />

                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|top"
                    android:inputType="textMultiLine"
                    android:minLines="6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SmallTextStyle"
                        android:text="录音" />

                    <com.chaqianma.jd.widget.SoundGridView
                        android:id="@+id/gv_sound"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:columnWidth="80dp"
                        android:gravity="center"
                        android:horizontalSpacing="5dp"
                        android:listSelector="#ffffff"
                        android:numColumns="auto_fit"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SmallTextStyle"
                        android:text="图片" />

                    <com.chaqianma.jd.widget.ImageGridView
                        android:id="@+id/gv_mark"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:columnWidth="80dp"
                        android:gravity="center"
                        android:horizontalSpacing="5dp"
                        android:listSelector="#ffffff"
                        android:numColumns="auto_fit"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>