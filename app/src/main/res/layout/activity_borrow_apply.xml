<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/android_layout_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/SmallTextStyle"
            android:layout_marginLeft="15dp"
            android:text="待处理ID:"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/tv_id"
            style="@style/SmallTextStyle"
            android:text="487372"
            android:textSize="@dimen/large_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/background_corners"
        android:orientation="vertical"
        android:padding="1dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

            <TextView
                android:id="@+id/tv_name_tag"
                style="@style/SmallTextStyle"
                android:layout_marginLeft="2dp"
                android:text="姓名" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/SmallTextStyle"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/tv_name_tag" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_telephone"
                    style="@style/SmallTextStyle"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/img_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/icon_phone" />
            </LinearLayout>
        </RelativeLayout>

        <View style="@style/ViewLineStyle" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal">

            <TextView
                style="@style/SmallTextStyle"
                android:layout_marginLeft="2dp"
                android:text="借款金额" />

            <TextView
                android:id="@+id/tv_money"
                style="@style/SmallTextStyle"
                android:text="10"
                android:textColor="@color/red" />

            <TextView
                style="@style/SmallTextStyle"
                android:text="元"
                android:textColor="@color/red" />
        </LinearLayout>

        <View style="@style/ViewLineStyle" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal">

            <TextView
                style="@style/SmallTextStyle"
                android:layout_marginLeft="2dp"
                android:text="借款期限" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/SmallTextStyle" />

            <TextView
                style="@style/SmallTextStyle"
                android:text="月" />
        </LinearLayout>

        <View style="@style/ViewLineStyle" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal">

            <TextView
                style="@style/SmallTextStyle"
                android:layout_marginLeft="2dp"
                android:text="借款用途" />

            <TextView
                android:id="@+id/tv_purpose"
                style="@style/SmallTextStyle" />

        </LinearLayout>

        <View style="@style/ViewLineStyle" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_officeTag"
                style="@style/SmallTextStyle"
                android:layout_marginLeft="2dp"
                android:text="办公地址" />

            <TextView
                android:id="@+id/tv_office"
                style="@style/SmallTextStyle"
                android:layout_weight="1"
                android:singleLine="false" />

            <TextView
                android:id="@+id/tv_office_map"
                style="@style/SmallTextStyle"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/view_map"
                android:textColor="#0A57DB" />

        </LinearLayout>

        <View style="@style/ViewLineStyle" />

        <LinearLayout
            android:id="@+id/layout_view_map"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

            <TextView
                android:id="@+id/tv_addressTag"
                style="@style/SmallTextStyle"
                android:layout_marginLeft="2dp"
                android:text="所在位置" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/SmallTextStyle"
                android:layout_toRightOf="@id/tv_addressTag"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_view_map"
                style="@style/SmallTextStyle"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/view_map"
                android:textColor="#0A57DB" />
        </LinearLayout>

        <View style="@style/ViewLineStyle" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal">

            <TextView
                style="@style/SmallTextStyle"
                android:layout_marginLeft="2dp"
                android:text="申请时间" />

            <TextView
                android:id="@+id/tv_apply_time"
                style="@style/SmallTextStyle" />
        </LinearLayout>

        <View style="@style/ViewLineStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <Button
                    android:id="@+id/btn_transfer"
                    style="@style/MatchParentButtonStyle"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="转出" />

                <Button
                    android:id="@+id/btn_borrow"
                    style="@style/MatchParentButtonStyle"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="接入" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/layout_btn">

                <!--   <TextView
                       android:id="@+id/tv_begin_task"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:layout_alignParentLeft="true"
                       android:layout_marginRight="4dp"
                       android:layout_marginTop="4dp"
                       android:text="@string/transfer_task"
                       android:textColor="#0A57DB" />-->

                <TextView
                    android:id="@+id/tv_finish_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/finish_task"
                    android:textColor="#0A57DB" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
