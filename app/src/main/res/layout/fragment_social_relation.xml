<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/android_layout_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_social_relation_1" />

            <ViewStub
                android:id="@+id/stub_social_relation_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inflatedId="@+id/social_relation_2"
                android:layout="@layout/layout_social_relation_2" />

            <ViewStub
                android:id="@+id/stub_social_relation_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inflatedId="@+id/social_relation_3"
                android:layout="@layout/layout_social_relation_3" />

            <ViewStub
                android:id="@+id/stub_social_relation_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inflatedId="@+id/social_relation_4"
                android:layout="@layout/layout_social_relation_4" />

            <ViewStub
                android:id="@+id/stub_social_relation_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inflatedId="@+id/social_relation_5"
                android:layout="@layout/layout_social_relation_5" />

            <LinearLayout
                style="@style/LinearLayoutStyle"
                android:orientation="vertical">

                <TextView
                    style="@style/SmallTextStyle"
                    android:text="备注" />

                <EditText
                    android:id="@+id/et_mark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|top"
                    android:inputType="textMultiLine"
                    android:minLines="6" />

                <LinearLayout
                    style="@style/LinearLayoutStyle"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SmallTextStyle"
                        android:text="录音" />

                    <EditText
                        android:id="@+id/et_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:inputType="textMultiLine"
                        android:minLines="6" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>